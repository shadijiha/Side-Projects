#type vertex
#version 400 core

in vec3 position;
in vec2 textureCoords;

out vec2 out_textCoords;

void main(void)	{
	gl_Position = vec4(position, 1.0);
	color = vec3(position.x + 0.5, 1.0, position.y + 0.5);
}


#type fragment
#version 400 core

in vec3 color;

out vec4 out_Color;

void main(void)	{
	out_Color = vec4(color, 1.0);
}