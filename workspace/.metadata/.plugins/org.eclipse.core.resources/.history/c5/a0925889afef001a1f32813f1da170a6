#type vertex
#version 150

in vec3 position;

uniform mat4 tranformMat;
uniform mat4 projectionMat;
uniform mat4 viewMatrix;

uniform vec4 u_color;

void main(void)	{
	gl_Position = projectionMat * viewMatrix * tranformMat * vec4(position, 1.0);
	color = vec4(1.0, 0.0, 0.0, 1.0);
}


#type fragment
#version 400 core

in vec4 color;

out vec4 out_Color;

void main(void)	{
	out_Color = color;
}