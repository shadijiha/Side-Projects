#type vertex
#version 400 core

in vec3 position;
in vec2 textureCoords;

out vec2 out_textCoords;

void main(void)	{
	gl_Position = vec4(position, 1.0);
	out_textCoords = textureCoords;
}


#type fragment
#version 400 core

in vec2 out_textCoords;

out vec4 out_Color;

uniform sampler2D textureSampler;

void main(void)	{
	out_Color = vec4(color, 1.0);
}