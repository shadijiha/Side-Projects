{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Shado",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#keys"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#predefined_macros"
		},
		{
			"include": "#function-call"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.documentation.shado",
					"match": "//.*"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.shado",
					"match": "(#(if|endif|include|error|stop|using|type))\\b"
				}
			]
		},
		"keys": {
			"patterns": [
				{
					"name": "entity.other.attribute-name.pseudo-class.shado",
					"match": ".*(\\s+)?:"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.shado",
					"match": "\\s+(==|!=)\\s+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.shado",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.shado",
					"match": "\\\\."
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"begin": "(?i)(?<![\\w-])(defined)(\\()",
					"beginCaptures": {
						"1": { "name": "support.function.defined.shado" },
						"2": {
							"name": "punctuation.section.function.begin.bracket.round.shado"
						}
					},
					"end": "\\)",
					"endCaptures": {
						"0": {
							"name": "punctuation.section.function.end.bracket.round.shado"
						}
					},
					"name": "meta.function.defined.shado",
					"patterns": [
						{
							"match": "[*/]|(?<=\\s|^)[-+](?=\\s|$)",
							"name": "keyword.operator.arithmetic.shado"
						}
					]
				},
				{
					"begin": "(?i)(?<![\\w-])(undefined)(\\()",
					"beginCaptures": {
						"1": { "name": "support.function.undefined.shado" },
						"2": {
							"name": "punctuation.section.function.begin.bracket.round.shado"
						}
					},
					"end": "\\)",
					"endCaptures": {
						"0": {
							"name": "punctuation.section.function.end.bracket.round.shado"
						}
					},
					"name": "meta.function.undefined.shado",
					"patterns": [
						{
							"match": "[*/]|(?<=\\s|^)[-+](?=\\s|$)",
							"name": "keyword.operator.arithmetic.shado"
						}
					]
				}
			]
		},
		"predefined_macros": {
			"patterns": [
				{
					"match": "\\b(__FILE__|__LINE__|__DATE__|__DEFAULT_SEPARATOR__)\\b",
					"captures": {
						"1": {
							"name": "entity.name.other.preprocessor.macro.predefined.$1.cpp"
						}
					}
				},
				{
					"match": "\\b__([A-Z_]+)__\\b",
					"name": "entity.name.other.preprocessor.macro.predefined.probably.$1.cpp"
				}
			]
		},
		"function-call": {
			"patterns": [
				{
					"match": "(?i)\\b(separator|object file)\\b",
					"name": "support.function.construct.output.shado"
				}
			]
		}
	},
	"scopeName": "source.shado"
}
