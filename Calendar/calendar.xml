      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module JavaFX test -->
  
  <dirname property="module.javafx_test.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.javafx_test" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javafx_test" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javafx_test" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javafx_test" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="javafx_test.output.dir" value="${module.javafx_test.basedir}/out/production/JavaFX test"/>
  <property name="javafx_test.testoutput.dir" value="${module.javafx_test.basedir}/out/test/JavaFX test"/>
  
  <path id="javafx_test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javafx_test.module.production.classpath">
    <path refid="${module.jdk.classpath.javafx_test}"/>
    <path refid="library.javafx-11.0.2.classpath"/>
    <path refid="library.javafx-laptop.classpath"/>
    <path refid="library.json-simple-1.1.11.classpath"/>
  </path>
  
  <path id="javafx_test.runtime.production.module.classpath">
    <pathelement location="${javafx_test.output.dir}"/>
    <path refid="library.javafx-11.0.2.classpath"/>
    <path refid="library.javafx-laptop.classpath"/>
    <path refid="library.json-simple-1.1.11.classpath"/>
  </path>
  
  <path id="javafx_test.module.classpath">
    <path refid="${module.jdk.classpath.javafx_test}"/>
    <pathelement location="${javafx_test.output.dir}"/>
    <path refid="library.javafx-11.0.2.classpath"/>
    <path refid="library.javafx-laptop.classpath"/>
    <path refid="library.json-simple-1.1.11.classpath"/>
  </path>
  
  <path id="javafx_test.runtime.module.classpath">
    <pathelement location="${javafx_test.testoutput.dir}"/>
    <pathelement location="${javafx_test.output.dir}"/>
    <path refid="library.javafx-11.0.2.classpath"/>
    <path refid="library.javafx-laptop.classpath"/>
    <path refid="library.json-simple-1.1.11.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javafx_test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javafx_test">
    <patternset refid="excluded.from.module.javafx_test"/>
  </patternset>
  
  <path id="javafx_test.module.sourcepath">
    <dirset dir="${module.javafx_test.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javafx_test" depends="compile.module.javafx_test.production,compile.module.javafx_test.tests" description="Compile module JavaFX test"/>
  
  <target name="compile.module.javafx_test.production" depends="register.custom.compilers" description="Compile module JavaFX test; production classes">
    <mkdir dir="${javafx_test.output.dir}"/>
    <javac2 destdir="${javafx_test.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javafx_test}/javac">
      <compilerarg line="${compiler.args.javafx_test}"/>
      <bootclasspath refid="javafx_test.module.bootclasspath"/>
      <classpath refid="javafx_test.module.production.classpath"/>
      <src refid="javafx_test.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javafx_test"/>
    </javac2>
    
    <copy todir="${javafx_test.output.dir}">
      <fileset dir="${module.javafx_test.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javafx_test.tests" depends="register.custom.compilers,compile.module.javafx_test.production" description="compile module JavaFX test; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javafx_test" description="cleanup module">
    <delete dir="${javafx_test.output.dir}"/>
    <delete dir="${javafx_test.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javafx_test" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javafx_test" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>